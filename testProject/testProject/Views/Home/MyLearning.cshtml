@model testProject.Models.ViewModels.MyGroups.MyLearningModel
@{
    ViewBag.Title = "Обучение";
    Layout = "~/Views/Layouts/UserLayout.cshtml";
}

@*<h2>Моё обучение</h2>*@

<div class="page_block">
    <span class="block_header">Текущее обучение</span>
    <div class="search">
        <img src="~/Files/Default/loop.png" class="search_preview" />
        <input type="text" class="search_input" placeholder="Поиск"/>
    </div>
    @if (Model.actualGroups.Count > 0) {
        <table class="learning">
            <thead>
                <th>Дата начала</th>
                <th>Дата окончания</th>
                <th>Номер группы</th>
                <th>Курс</th>
                <th>Преподаватель</th>
                <th>Площадка</th>
            </thead>
            <tbody>
                @foreach (var item in Model.actualGroups) {
                    <tr>
                        <td>@item.DateStart.ToShortDateString()</td>
                        <td>@item.DateEnd.ToShortDateString()</td>
                        <td>@item.GroupName</td>
                        <td>@item.Course</td>
                        <td>@item.Lecturer</td>
                        <td>@item.Area</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else {
        <span class="block_header"> - Нет информации</span>
    }
</div>

<div class="page_block">
    <span class="block_header">Предстоящее обучение</span>
    <div class="search">
        <img src="~/Files/Default/loop.png" class="search_preview" />
        <input type="text" class="search_input" placeholder="Поиск" />
    </div>
    @if (Model.futureGroups.Count > 0) {
        <table class="learning">
            <thead>
            <th>Дата начала</th>
            <th>Дата окончания</th>
            <th>Номер группы</th>
            <th>Курс</th>
            <th>Преподаватель</th>
            <th>Площадка</th>
            </thead>
            <tbody>
                @foreach (var item in Model.futureGroups) {
                    <tr>
                        <td>@item.DateStart.ToShortDateString()</td>
                        <td>@item.DateEnd.ToShortDateString()</td>
                        <td>@item.GroupName</td>
                        <td>@item.Course</td>
                        <td>@item.Lecturer</td>
                        <td>@item.Area</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else {
        <span class="block_header"> - Нет информации</span>
    }

    <div class="pagination">
        <div class="pageNum">2</div>
        <div class="pageNum pageNum_selected">1</div>
    </div>
</div>

<div class="page_block">
    <span class="block_header">История обучения</span>
    <div class="search">
        <img src="~/Files/Default/loop.png" class="search_preview" />
        <input type="text" class="search_input" placeholder="Поиск" />
    </div>
    @if (Model.passedGroups.Count > 0) {
        <table class="learning">
            <thead>
            <th>Дата начала</th>
            <th>Дата окончания</th>
            <th>Оценка</th>
            <th>Номер группы</th>
            <th>Курс</th>
            <th>Преподаватель</th>
            <th>Площадка</th>
            </thead>
            <tbody>
                @foreach (var item in Model.passedGroups) {
                    <tr class="@item.getClass()">
                        <td>@item.Group.DateStart.ToShortDateString()</td>
                        <td>@item.Group.DateEnd.ToShortDateString()</td>
                        <td>@item.Mark</td>
                        <td>@item.Group.GroupName</td>
                        <td>@item.Group.Course</td>
                        <td>@item.Group.Lecturer</td>
                        <td>@item.Group.Area</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else {
        <span class="block_header"> - Нет информации</span>
    }

    <div class="pagination">
        <div class="pageNum">5</div>
        <div class="pageNum">4</div>
        <div class="pageNum">3</div>
        <div class="pageNum">2</div>
        <div class="pageNum pageNum_selected">1</div>
    </div>
</div>

