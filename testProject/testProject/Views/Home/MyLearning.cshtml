@model testProject.Models.ViewModels.MyGroups.MyLearningModel
@{
    ViewBag.Title = "Обучение";
    Layout = "~/Views/Layouts/UserLayout.cshtml";
}

<h2>Моё обучение</h2>

<div class="group">
    @foreach (var item in Model.groups) {
        <hr />
        <input type="hidden" value="@item.Id"/>
        @item.GroupName
        @item.Area
        @item.Course
        @item.DateStart.ToShortDateString()
        @item.DateEnd.ToShortDateString()
    }
</div>